@model Test.Models.UserModel

@{
    ViewData["Title"] = "Create";
}


@Html.Partial("_Header")

<div> STEP 1: Contact Info</div>

@Html.Partial("_Menu")

<div class="col" style="display: inline-block; float: right; width: 850px; ">
    <div class="form-group row ">
        <label for="staticEmail" class="col-form-label">*First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="staticFirstName">
        </div>
        <label for="staticEmail" class="col-form-label">*Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="staticEmail">
        </div>
    </div>
    <div class="form-group row" onsubmit="return checkForm(this);">
        <label for="inputMiddleName" class="col-sm-2 col-form-label">Middle Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputMiddleName">
        </div>
        <label for="staticEmail" class="col-form-label">*Confirm Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="staticEmail2">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputLastName" class="col-sm-2 col-form-label">*Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputLastName">
        </div>
        <label for="staticPhone" class="col-form-label">*Phone</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="staticPhone">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputCompany" class="col-sm-2 col-form-label">*Company</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputCompany">
        </div>
        <label for="staticFax" class="col-form-label">Fax</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="staticFax">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label">*Title</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="inputTitle">
        </div>
        <label for="staticMobile" class="col-form-label">Mobile</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="staticMobile">
        </div>
    </div>
</div>

<button class="nextButton">
    <a style="color: azure" asp-action="Privacy">
        Next
    </a>
</button>
@Html.Partial("_Footer")
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
