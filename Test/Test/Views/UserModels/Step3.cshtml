@model Test.Models.UserModel

@Html.Partial("_Header")
<div> STEP 3: Address</div>
@Html.Partial("_Menu")

@using (Html.BeginForm("Stage3", "UserModels", FormMethod.Post))
{
    <div class="address-input">

        @Html.LabelFor(model => model.Country, new {@class = "col-md-2"})
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "USA",
                Value = "USA"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Austria",
                Value = "Austria",
                Selected = true
            });
            listItems.Add(new SelectListItem
            {
                Text = "France",
                Value = "France"
            });
        }

        @Html.DropDownListFor(model => model.Country, listItems, new { @class = "col-md-2" })

        <div class="form-group row">
            @Html.LabelFor(model => model.OfficeName, new {@class = "col-md-2"})
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.OfficeName)
                @Html.ValidationMessageFor(model => model.OfficeName)
            </div>
        </div>
        <div class="form-group row">

            @Html.LabelFor(model => model.Address, new {@class = "col-md-2"})
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>
        <div class="form-group row">

            @Html.LabelFor(model => model.PostalCode, new {@class = "col-md-2"})
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.PostalCode)
                @Html.ValidationMessageFor(model => model.PostalCode)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.City, new {@class = "col-md-2"})
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </div>

        </div>
        @Html.LabelFor(model => model.State, new {@class = "col-md-2"})

        @{
            List<SelectListItem> listItems1 = new List<SelectListItem>();
            listItems1.Add(new SelectListItem
            {
                Text = "Florida",
                Value = "Florida"
            });
            listItems1.Add(new SelectListItem
            {
                Text = "Connecticut",
                Value = "Connecticut",
                Selected = true
            });
            listItems1.Add(new SelectListItem
            {
                Text = "Georgia",
                Value = "Georgia"
            });
        }
        @Html.DropDownListFor(model => model.State, listItems1, new {@class = "col-md-2"})
    </div>

    <div class="backButton">
        <input type="submit" name="previousBtn" value="Back" class="btn"/>
    </div>

    <div class="nextButton">
        <input type="submit" name="nextBtn" value="Done" class="btn"/>
    </div>
    @Html.Partial("_Footer")
}